{
  "name": "@unional/fixture",
  "version": "0.0.0-development",
  "description": "Provides fixture to tests",
  "homepage": "https://github.com/unional/fixture",
  "bugs": {
    "url": "https://github.com/unional/fixture/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/fixture.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "files": [
    "dist-es2015"
  ],
  "main": "dist-es2015/index.js",
  "typings": "dist-es2015/index.d.ts",
  "scripts": {
    "build": "npm run build-es2015",
    "build-es2015": "tsc -p tsconfig.base.json",
    "clean": "rimraf dist dist-es2015",
    "coverage": "jest --coverage",
    "dc": "npm run dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev -i tersify -i @types/diff-match-patch && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "verify": "npm run lint && npm run build && npm run coverage && npm run dependency-check",
    "verify-ci": "npm run lint && npm run build && jest --coverage --config jest.config.ci.json && npm run dependency-check",
    "watch": "jest --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/scripts/setup-test-env.js"
    ],
    "testRegex": ".*.spec.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "@types/diff-match-patch": "^1.0.32",
    "@unional/logging": "^1.0.0",
    "aurelia-logging-color": "^0.5.16",
    "chalk": "^2.4.1",
    "cp-file": "^6.0.0",
    "diff-match-patch": "^1.0.4",
    "diff-match-patch-line-and-word": "^0.1.2",
    "dir-compare": "^1.4.0",
    "glob": "^7.1.3",
    "minimatch": "^3.0.4",
    "mkdirp": "^0.5.1",
    "pad-left": "^2.1.0",
    "tersify": "^1.2.6",
    "unpartial": "^0.4.1"
  },
  "devDependencies": {
    "@types/cp-file": "^4.2.0",
    "@types/diff": "^3.5.2",
    "@types/glob": "^7.1.1",
    "@types/mkdirp": "^0.5.2",
    "@unional/devpkg-node": "^1.1.2",
    "assertron": "^5.2.3",
    "aurelia-logging-memory": "^0.3.2",
    "path-equal": "^1.1.0"
  }
}
